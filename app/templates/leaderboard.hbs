{{#bs-dropdown}}
  {{#bs-dropdown-button}}--- Velg ---{{/bs-dropdown-button}}
  {{#bs-dropdown-menu}}
    <li>{{#link-to 'leaderboard' (query-params searchtype="currentWeek")}}Denne uken{{/link-to}}</li>
    <li>{{#link-to 'leaderboard' (query-params searchtype="currentMonth")}}Denne måneden{{/link-to}}</li>
    <li>{{#link-to 'leaderboard' (query-params searchtype="currentYear")}}Dette året{{/link-to}}</li>
  {{/bs-dropdown-menu}}
{{/bs-dropdown}}

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Antall ganger</th>
      <th>Navn</th>
    </tr>
  </thead>
  <tbody>
    {{#each usersByDaysWalked as |group index|}}
      {{#if (eq session.currentUser.name group.value)}}
        <tr class="info">
          <td>{{plus-one index}}</td>
          <td>{{group.total}}</td>
          <td>{{group.value}}</td>
        </tr>
      {{else}}
        <tr>
          <td>{{plus-one index}}</td>
          <td>{{group.total}}</td>
          <td>{{group.value}}</td>
        </tr>
      {{/if}}
    {{/each}}
  </tbody>
</table>
